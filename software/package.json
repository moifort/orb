{
  "name": "orb",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "clean": "rm -rf .nuxt node_modules/.cache",
    "postinstall": "nuxt prepare",
    "lint": "biome check --write .",
    "typecheck": "vue-tsc --noEmit",
    "test:unit": "bun test unit",
    "deploy": "bun run build && bun deploy:compress && bun deploy:transfer && bun deploy:kill && bun deploy:start && bun deploy:clean",
    "deploy:compress": "tar --no-xattrs -czf output.tar.gz .output",
    "deploy:transfer": "sshpass -p 'orb' scp output.tar.gz root@192.168.1.199:~/output.tar.gz && sshpass -p 'orb' ssh root@192.168.1.199 'rm -rf ~/app && tar -xzf ~/output.tar.gz && mv .output app'",
    "deploy:kill": "sshpass -p 'orb' ssh root@192.168.1.199 'pkill -x chromium &&  fuser -k 3000/tcp && sleep 3'",
    "deploy:start": "sshpass -p 'orb' ssh -f -n root@192.168.1.199 '/var/lib/dietpi/dietpi-software/installed/chromium-autostart.sh'",
    "deploy:clean": "rm output.tar.gz .output",
    "storybook": "storybook dev -p 6006 --no-open",
    "storybook:build": "storybook build"
  },
  "dependencies": {
    "@nuxt/ui": "4.0.1",
    "@trpc/client": "11.6.0",
    "@trpc/server": "11.6.0",
    "@unovis/ts": "1.6.1",
    "@unovis/vue": "1.6.1",
    "@vueuse/core": "13.9.0",
    "mitt": "3.0.1",
    "nuxt": "4.1.2",
    "trpc-nuxt": "1.2.0",
    "ts-brand": "0.2.0",
    "ts-pattern": "5.8.0",
    "typescript": "5.9.3",
    "typescript-result": "3.5.2",
    "vue": "3.5.22",
    "vue-router": "4.5.1"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.5",
    "@chromatic-com/storybook": "4.1.1",
    "@nuxtjs/storybook": "9.0.1",
    "@storybook/addon-docs": "9.0.5",
    "@storybook/addon-vitest": "9.0.5",
    "@types/bun": "latest",
    "storybook": "9.0.5",
    "vue-tsc": "3.1.0"
  },
  "imports": {
    "#shared/*": "./shared/*.ts"
  }
}
