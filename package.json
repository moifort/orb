{
  "name": "orb",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "postinstall": "nuxt prepare",
    "lint": "biome check --write .",
    "typecheck": "vue-tsc --noEmit",
    "deploy": "bun run build && bun deploy:compress && bun deploy:transfer && bun deploy:kill && bun deploy:start",
    "deploy:compress": "tar --no-xattrs --no-mac-metadata -czf output.tar.gz .output",
    "deploy:transfer": "sshpass -p 'orb' scp output.tar.gz root@192.168.1.199:~/output.tar.gz && sshpass -p 'orb' ssh root@192.168.1.199 'rm -rf ~/app && tar -xzf ~/output.tar.gz && mv .output app'",
    "deploy:kill": "sshpass -p 'orb' ssh root@192.168.1.199 'pkill -x chromium &&  fuser -k 3000/tcp && sleep 3'",
    "deploy:start": "sshpass -p 'orb' ssh -f -n root@192.168.1.199 '/var/lib/dietpi/dietpi-software/installed/chromium-autostart.sh'"
  },
  "dependencies": {
    "@nuxt/image": "1.11.0",
    "@nuxt/ui": "4.0.0",
    "@trpc/client": "11.6.0",
    "@trpc/server": "11.6.0",
    "nuxt": "4.1.2",
    "trpc-nuxt": "1.2.0",
    "trpc-to-mcp": "1.3.2",
    "ts-brand": "0.2.0",
    "ts-pattern": "5.8.0",
    "typescript": "5.9.2",
    "typescript-result": "3.5.2",
    "vue": "3.5.22",
    "vue-animated-counter": "0.3.1",
    "vue-router": "4.5.1"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "vue-tsc": "3.0.8",
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "imports": {
    "#shared/*": "./shared/*.ts"
  }
}
